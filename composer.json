{
    "name": "verifiedjoseph/gotify-api-php",
    "description": "PHP library for interacting with a Gotify server using the Gotify REST-API.",
    "keywords": ["Gotify"],
    "homepage": "https://github.com/VerifiedJoseph/gotify-api-php",
    "license": "MIT",
    "authors": [
        {
            "name": "VerifiedJoseph",
            "homepage": "https://github.com/VerifiedJoseph"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.4"
    },
    "autoload": {
        "psr-4": {
            "Gotify\\": "src/Gotify"
        },
        "files": [
            "src/Gotify/json.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^9.5",
        "phpmd/phpmd": "^2.11"
    }
}
